/*
    Blink the LED connected to GPIO2 at a 1 sec interval
*/

GPIO.setPinMode(2, GPIO.PinMode.Output);
print("Started Blink\n");

function blink()
{
    GPIO.digitalWrite(2, true);
    print("Blink off\n");
    delay(500);
    GPIO.digitalWrite(2, false);
    print("Blink on\n");
    delay(500); // wait a bit
}

var count = 0;
while (count < 100) {
    blink();
    count++;
}

