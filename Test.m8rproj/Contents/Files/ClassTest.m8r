var MyClass = {
	_myVar : null,
	doSomething : function(x) {
		printf("The value of _myVar is %d, the value of x is %s\n", _myVar, x);
	},
	constructor : function(a, b, c) {
		_myVar = a + b + c;
		return this;
	}
};

var Circle = {
	_radius : null,
	PI : 3.14159,
	constructor : function(radius) { _radius = radius; },
	area : function() { return PI * _radius * _radius; }
};

var myClass = new MyClass(1, 2, 3);
myClass.doSomething("Hello");

var myCircle = new Circle(6);
printf("myCircle(6) area = %f\n", myCircle.area());
