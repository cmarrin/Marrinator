function add()
{
	var n = 0;
	for (var i = 0; i < arguments.length; ++i) {
		n += arguments[i];
	}
	return n;
}

println("add() = " + add());
println("add(8) = " + add(8));
println("add(5, 7) = " + add(5, 7));
println("add(4, 3, 2) = " + add(4, 3, 2));
println("add(1, 2, 3, 4) = " + add(1, 2, 3, 4));

